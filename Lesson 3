# include <iostream>
# include <vector>
using namespace std;

int main() {
//  Summing a numberâ€™s digits
    cout << "Enter a positive integer: ";
    int n; cin >> n;
    int sum = 0;
    for (char c: to_string(n)){
        sum += c - '0';
    }
    cout << "The sum of digits is: " << sum << endl;

    cout << "Please enter two digits seperated by a space: ";
